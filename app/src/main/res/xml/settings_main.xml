<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:defaultValue="@string/settings_order_by_default"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_min_magnitude_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_min_magnitude_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_min_magnitude_label" />

    <ListPreference
        android:defaultValue="@string/settings_start_time_limit_default"
        android:entries="@array/settings_start_time_limit_labels"
        android:entryValues="@array/settings_start_time_limit_values"
        android:key="@string/settings_start_time_limit_key"
        android:title="@string/settings_start_time_limit_label" />

    <ListPreference
        android:defaultValue="@string/settings_limit_row_default"
        android:entries="@array/settings_limit_row_values"
        android:entryValues="@array/settings_limit_row_values"
        android:key="@string/settings_limit_row_key"
        android:title="@string/settings_limit_row_label" />

    <ListPreference
        android:defaultValue="@string/settings_web_open_default"
        android:entries="@array/settings_web_open_labels"
        android:entryValues="@array/settings_web_open_values"
        android:key="@string/settings_web_open_key"
        android:title="@string/settings_web_open_label" />

    <ListPreference
        android:defaultValue="@string/settings_map_open_default"
        android:entries="@array/settings_map_open_labels"
        android:entryValues="@array/settings_map_open_values"
        android:key="@string/settings_map_open_key"
        android:title="@string/settings_map_open_label" />

</PreferenceScreen>